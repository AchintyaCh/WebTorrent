{
  "name": "p2p-react-app",
  "private": true,
  "version": "1.0.0",
  "description": "WebTorrent P2P File Sharing Marketplace - A decentralized file sharing application",
  "author": "WebTorrent Team",
  "license": "MIT",
  "type": "commonjs",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "npm run build && electron-builder",
    "clean": "if exist dist rmdir /s /q dist && if exist release rmdir /s /q release"
  },
  "dependencies": {
    "bittorrent-dht": "^11.0.10",
    "buffer": "^6.0.3",
    "pbkdf2": "^3.1.3",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "util": "^0.12.5",
    "webtorrent": "^2.8.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "crypto-browserify": "^3.12.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "events": "^3.3.0",
    "globals": "^16.3.0",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "terser": "^5.43.1",
    "vite": "^7.1.0",
    "vm-browserify": "^1.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yourdomain.webtorrent",
    "productName": "WebTorrent",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/square.png"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/webtorrent/**/*",
      "node_modules/bittorrent-dht/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/bittorrent-dht",
        "to": "app/node_modules/bittorrent-dht"
      }
    ]
  }
}
