
{
  "appId": "com.webtorrent.p2pshare",
  "productName": "WebTorrent P2P Share",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "icon": "public/square.png",
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "icon": "public/square.png",
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "icon": "public/square.png",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      },
      {
        "target": "zip",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "icon": "public/square.png",
    "background": "public/square.png",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "appImage": {
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  }
}
